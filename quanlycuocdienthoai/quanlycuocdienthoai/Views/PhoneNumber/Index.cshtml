@model IEnumerable<quanlycuocdienthoai.Models.PhoneNumber>

@{
    ViewBag.Title = "Index";
}

<h2>Số điện thoại</h2>
<div class="col-lg-12">
    <form method="get">
        <input type="text" class="form-control col-lg-10" name="txtPhoneNumberSearch" value="@Request.QueryString["txtPhoneNumberSearch"]"/>
        <button type="submit" class="btn btn-primary">Tìm</button>
    </form>
</div>

<div class="col-lg-12" style="margin-top: 10px">
    <table class="table">
        <tr>
            <th>
                SĐT
            </th>
            <th>
                Trạng thái
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNo)
                </td>

                @if (item.Status)
                {
                    <td>Đang sử dụng</td>
                }
                else
                {
                    <td>Đang trống</td>
                }

                <td>
                    @Html.ActionLink("Xem chi tiết cuộc gọi", "ShowPhoneCallDetail", new { id = item.KeyId })
                </td>
            </tr>
        }

    </table>
</div>